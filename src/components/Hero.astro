<section class="relative h-[85vh] min-h-[600px] flex items-center justify-center text-white overflow-hidden">

  <!-- Fondo 1 -->
  <div
    class="hero-slide absolute inset-0 transition-opacity duration-1000 opacity-100"
    style="background-image: url('/img/hero/hero1.png');"
  ></div>

  <!-- Fondo 2 -->
  <div
    class="hero-slide absolute inset-0 transition-opacity duration-1000 opacity-0"
    style="background-image: url('/img/hero/hero2.png');"
  ></div>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Contenido -->
  <div class="relative z-10 mx-auto max-w-5xl px-4 text-center">

    <span class="inline-block rounded-full bg-[#25864b] px-4 py-1.5 text-xs font-bold tracking-widest uppercase">
      Desde 1993 en Ecuador
    </span>

    <h1 class="mt-6 text-4xl md:text-6xl lg:text-7xl font-extrabold leading-tight">
      Perforación y pilotaje <br class="hidden md:block" />
      con precisión industrial
    </h1>

    <p class="mt-6 text-lg md:text-xl text-slate-200 max-w-3xl mx-auto leading-relaxed">
      Soluciones en infraestructura hídrica y cimentaciones profundas
      para proyectos agrícolas, industriales y de construcción.
    </p>

    <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#cta"
        class="inline-flex items-center justify-center rounded-xl bg-[#25864b] px-8 py-4 font-semibold text-white shadow-lg hover:opacity-90 transition"
      >
        Cotizar Proyecto →
      </a>

      <a
        href="#servicios"
        class="inline-flex items-center justify-center rounded-xl border border-white/40 px-8 py-4 font-semibold hover:bg-white/10 transition"
      >
        Nuestros Servicios
      </a>
    </div>

  </div>
</section>

<script is:inline>
  const slides = document.querySelectorAll(".hero-slide");
  let current = 0;

  setInterval(() => {
    slides[current].classList.remove("opacity-100");
    slides[current].classList.add("opacity-0");

    current = (current + 1) % slides.length;

    slides[current].classList.remove("opacity-0");
    slides[current].classList.add("opacity-100");
  }, 3000);
</script>

<style>
  .hero-slide {
    background-size: cover;
    background-position: center;
  }
</style>