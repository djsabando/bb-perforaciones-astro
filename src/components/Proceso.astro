---
const pasos = [
  {
    n: 1,
    title: "Estudio Previo",
    desc: "Análisis geofísico del terreno para localizar el mejor punto de agua.",
  },
  {
    n: 2,
    title: "Perforación",
    desc: "Ejecución con maquinaria de rotación y percusión según el terreno.",
  },
  {
    n: 3,
    title: "Pruebas",
    desc: "Bombeo de prueba para determinar el caudal real y calidad del agua.",
  },
  {
    n: 4,
    title: "Entrega",
    desc: "Instalación de bomba definitiva y entrega de documentación técnica.",
  },
];
---

<section id="proceso" class="bg-slate-900 text-white">
  <div class="mx-auto max-w-6xl px-4 py-16 md:px-6 md:py-24">
    <!-- Header -->
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-extrabold tracking-tight md:text-5xl">
        ¿Cómo trabajamos?
      </h2>
      <p class="mt-4 text-base text-slate-400 md:text-lg">
        Un proceso estructurado para asegurar la calidad y el éxito de cada perforación.
      </p>
    </div>

    <!-- Steps -->
    <div class="mt-14 md:mt-16 relative">
      <!-- línea punteada (solo desktop) -->
      <div
        class="hidden md:block absolute left-0 right-0 top-8 border-t border-dashed border-slate-700"
        aria-hidden="true"
      ></div>

      <div class="grid grid-cols-1 gap-10 md:grid-cols-4 md:gap-8 relative">
        {pasos.map((p) => (
          <div class="text-center relative">
            <!-- círculo -->
            <div class="relative z-10 mx-auto h-16 w-16 rounded-full border-2 border-dashed border-[#25864b] bg-slate-900 grid place-items-center">
              <span class="text-[#25864b] text-xl font-extrabold">{p.n}</span>
            </div>

            <!-- texto -->
            <h3 class="mt-6 text-lg font-extrabold md:text-xl">{p.title}</h3>
            <p class="mt-3 text-sm text-slate-400 px-6 md:px-2 leading-relaxed">
              {p.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>