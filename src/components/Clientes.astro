---
const clientes = [
    { name: "Cliente 1", logo: "/img/clientes/cliente1.png" },
    { name: "Cliente 2", logo: "/img/clientes/cliente2.png" },
    { name: "Cliente 3", logo: "/img/clientes/cliente3.png" },
    { name: "Cliente 4", logo: "/img/clientes/cliente4.png" },
    { name: "Cliente 5", logo: "/img/clientes/cliente5.png" },
    { name: "Cliente 6", logo: "/img/clientes/cliente6.png" },
];
---

<section id="clientes" class="section scroll-mt-24">
  <div class="mx-auto max-w-6xl px-6">
    
    <h2 class="section-title">Clientes</h2>
    <p class="section-sub">Algunas empresas que confían en nosotros.</p>
    
    <!-- 2 filas x 3 columnas -->
    <ul
      role="list"
      class="mt-8 grid grid-cols-2 md:grid-cols-3 gap-x-12 gap-y-10 md:gap-x-16 md:gap-y-12"
    >
      {clientes.map((c) => (
        <li class="flex items-center justify-center">
          <!-- LOGO al doble de tamaño -->
          <img
            src={c.logo}
            alt={c.name}
            loading="lazy"
            decoding="async"
            class="h-16 md:h-24 w-auto object-contain
                    opacity-100 filter-none
                    max-w-[160px] md:max-w-[220px]"
            />
        </li>
      ))}
    </ul>
  </div>
</section>

