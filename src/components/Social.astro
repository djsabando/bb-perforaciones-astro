---
const { size = 'sm', className = '' } = Astro.props;

const FB = 'https://www.facebook.com/B.b.Perforaciones.PozosdeAgua?mibextid=ZbWKwL';
const IG = 'https://www.instagram.com/b.bperforacionespozos?igsh=NXhhaGx0M2MydHcz';

const iconSize = size === 'sm' ? 'h-5 w-5' : 'h-6 w-6';
const gap = size === 'sm' ? 'gap-3' : 'gap-4';
---
<nav aria-label="Redes sociales" class={`flex ${gap} ${className}`}>
  <a href={FB} target="_blank" rel="noopener noreferrer"
     aria-label="Facebook (se abre en pestaña nueva)"
     class="inline-flex items-center justify-center rounded-full text-gray-600 hover:text-brand transition">
    <!-- FB -->
    <svg viewBox="0 0 24 24" class={iconSize} aria-hidden="true">
      <path fill="currentColor" d="M13.5 21v-7h2.3l.4-2.7h-2.7v-1.7c0-.8.2-1.4 1.4-1.4H16V5.0c-.2 0-1-.1-2-.1c-2 0-3.4 1.2-3.4 3.5V11H8v2.7h2.6V21h2.9z"/>
    </svg>
    <span class="sr-only">Facebook</span>
  </a>

  <a href={IG} target="_blank" rel="noopener noreferrer"
     aria-label="Instagram (se abre en pestaña nueva)"
     class="inline-flex items-center justify-center rounded-full text-gray-600 hover:text-brand transition">
    <!-- IG -->
    <svg viewBox="0 0 24 24" class={iconSize} aria-hidden="true">
      <path fill="currentColor" d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7Zm5 3a5 5 0 1 1 0 10a5 5 0 0 1 0-10Zm0 2.2a2.8 2.8 0 1 0 0 5.6a2.8 2.8 0 0 0 0-5.6ZM18 6.6a1 1 0 1 0 0 2a1 1 0 0 0 0-2Z"/>
    </svg>
    <span class="sr-only">Instagram</span>
  </a>
</nav>
